<header>
  <div class="container">
    <a href="<%= root_path %>" class="brand">
      <i class="fa fa-star-half-o"></i> Snack Winner
    </a>
    <% if current_user.blank? %>
    <ul class="nav navbar-nav">
      <li>
        <a href="<%= new_session_path %>">
          <i class="fa fa-sign-in"></i>
          Sign In
        </a>
      </li>
      <li>
        <a href="<%= new_user_path %>">
          <i class="fa fa-github-alt"></i>
          Sign Up
        </a>
      </li>
    </ul>
    <% else %>
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.first_name %> <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to sign_out_sessions_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>
              Sign Out
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
    <% end %>
  </div>
</header>